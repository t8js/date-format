{
  "include": ["./src", "./index.ts", "./tests.ts"],
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "lib": ["ESNext", "DOM"],
    "target": "esnext",
    "outDir": "dist",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "allowImportingTsExtensions": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
